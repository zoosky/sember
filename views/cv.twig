{{ partials.head }}
{{ partials.nav }}

<div class="wrap cv">

  <h1 class="page-title">Curriculum Vitae</h1>

  <h2 class="section-title">About me</h2>

  <div class="section-about">

    <div class="photo">
        <img src="/{{ config.about.photo }}" alt="{{ config.about.name }}" />
    </div>

    <h3 class="name">{{ config.about.name }}</h3>

    <div class="meta">
      üìç {{ config.about.location }} <span class="sep"></span>
      ‚úâÔ∏è {{ config.about.email }}
    </div>

    <div class="description">{{ config.about.description_long }}</div>
  
  </div>

  {% if config.jobs %}
    <h2 class="section-title">Work experience</h2>

    <ul class="jobs">
      {% for job in config.jobs %}
        <li class="job">
          <h3 class="title">
            {{ job.position }} at 
            {% if job.url %}
              <a href="{{ job.url }}">
            {% endif %}
            {{ job.company }}
            {% if job.url %}
              </a>
            {% endif %}
          </h3>

          <div class="meta">
            {{ job.from }} &mdash; {{ job.to }}
            {% if job.location %}
              <span class="sep"></span> üìç {{ job.location }}
            {% endif %}
          </div>

          {% if job.description %}
            <div class="description">{{ job.description }}</div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if config.education %}
    <h2 class="section-title">Education</h2>

    <ul class="education">
      {% for school in config.education %}
        <li class="school">
          <h3 class="title">
            {{ school.degree }} from  
            {% if school.url %}
              <a href="{{ school.url }}">
            {% endif %}
            {{ school.name }}
            {% if school.url %}
              </a>
            {% endif %}
          </h3>

          <div class="meta">
            {{ school.field_of_study }}<br>
            {{ school.from }} &mdash; {{ school.to }}
          </div>

          {% if school.description %}
            <div class="description">{{ school.description }}</div>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if config.skills %}
    <h2 class="section-title">Skills</h2>

    <ul class="skills">
      {% for skill in config.skills %}
        <li class="skill">{{ skill }}</li>
      {% endfor %}
    </ul>
  {% endif %}

</div>

{{ partials.foot }}